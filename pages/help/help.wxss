.page-content{
  margin: 0px;
  padding: 0;
  background: #F5F5F5;
}

.commom{
  background: #fff;
  border-radius: 6px;
  margin: 4px 8px;
  padding: 6px;
}

.bindInfo text{
  font-size: 13pt;
  font-weight: bold;
}
.bindInfo .info{
 float: right;
 text-align: center;
 margin-right:15px;
 font-size: 12pt; 
 padding: 0px 6px 2px 6px;
 border-radius: 10px;
}

.order-time text{
  font-size: 13pt;
  font-weight: bold;
}

.order-time .date-time{
  margin: 2px 0px;
  text-align: center;
  font-size: 12pt; 
  padding: 1px;
  border-radius: 11px;
  font-weight: normal;
}
.order-time .help-tip{
  margin-top: 15px;
  display: flex;
}
.order-time .tip{
  font-size: 11pt;
  color: gray;
  margin: 5px 0;
}
.order-time button{
  width: 80px;
  height: 30px;
  font-size: 9pt;
  text-align: center;
  padding: 0px 2px 2px 2px;
}

.help-master{
  padding: 8px;
}
.help-master .help-opt{
  display: flex;
  padding-bottom: 6px;
  border-bottom: 1px solid gainsboro;
}
.help-master .help-add{
  display: flex;
  width: 100%;
  justify-content: center;
}
.help-master .help-add image{
  width: 25px;
  height: 25px;
}
.help-master .help-add text{
 font-size: 13pt;
 font-weight: bold;
 padding-left: 3px;
 color: #09BB07; 
}
