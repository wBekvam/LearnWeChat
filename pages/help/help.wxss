.help-list .item{
  display: flex;
  margin: 10px 30px;
}
.help-list .item image{
  width: 25px;
  height: 25px;
}
.help-list .item .listInfo{
  font-size: 12pt;
  padding: 2px 0px 1px 3px;
  color:	#696969;
}

.help-other view{
  font-size: 11pt;
}
.help-other .btn{
  font-size: 10pt;
  padding: 4px;
  border-radius: 4px;
  background: #e64340;
  color: #FFF;
  float: right;
}
.help-price text{
  font-size: 12pt;
  font-weight: bold;
}
.help-price .price{
  height:20px; 
  text-align: center;
  margin-right:10px;
  font-size: 11pt; 
  padding: 0px 6px 2px 6px;
  border-radius: 10px;
  float: right;
  font-weight: bold;
  color: #e64340;
}

.help-price .tip{
  font-size: 11pt;
  color: gray;
  margin: 5px;
}
.notes{
  background: #fff;
  font-size: 11pt;
}
.notes canvas{
  widows: 200px;
  height: 200px;
  margin: 20px;
}