.header{
  width:100%;
  height:40px; 
  color: #fff; 
  background:#008B8B; 
  border-bottom: 1px solid	#008B8B; 
  position: relative;
}
.header_title{
  font-size: 18px; 
  text-align: center; 
  line-height: 40px; 
  font-weight: normal;
}

.book_list{
  position: relative;
  overflow: hidden;
  margin-top: 10rpx
}
.book_info{
  background: #FFF;
  padding: 10rpx 20rpx;
  overflow: hidden;
}
.book_info:active{
  background: #EEE;
}

.book_info .book_pic{
  float: left;
  width: 140rpx;
  height: 180rpx;
  overflow: hidden
}

.book_info .book_pic image{
  width: 140rpx;
  height: 180rpx;
}

.book_list .book_content{
  margin-left: 160rpx;
}

.book_list .book_content .book_title{
  font-size: 35rpx;
  display: inline-block;
  height: 40rpx;
  padding-top: 2rpx;
  overflow: hidden;
}

